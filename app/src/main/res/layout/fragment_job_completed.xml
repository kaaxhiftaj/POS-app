<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ui.fragments.JobCompletedFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/missionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:text="Mission"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/missionDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Show picture of Flow Express Terminals"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10sp">

            <ImageView
                android:id="@+id/iv_first_image"
                android:layout_width="140sp"
                android:layout_height="100sp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY" />


            <ImageView
                android:id="@+id/iv_second_image"
                android:layout_width="140sp"
                android:layout_height="100sp"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/camera" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50sp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingTop="30sp">

                    <LinearLayout
                        android:id="@+id/iv_current_location"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginLeft="25sp"
                        android:layout_marginRight="25sp"
                        android:layout_marginTop="40sp"
                        android:background="@drawable/round_back_edittext"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="10sp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:src="@drawable/location" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:text="Confirm location"
                            android:textSize="18dp" />


                        <ImageView
                            android:id="@+id/iv_current_check_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="0.5"
                            android:src="@drawable/checked"
                            android:visibility="gone" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/iv_current_time"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginLeft="25sp"
                        android:layout_marginRight="25sp"
                        android:layout_marginTop="20sp"
                        android:background="@drawable/round_back_edittext"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:src="@drawable/clock" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:text="Confirm time"
                            android:textSize="18dp" />


                        <ImageView
                            android:id="@+id/iv_current_check_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="0.5"
                            android:src="@drawable/checked"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/iv_authentication"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginLeft="25sp"
                        android:layout_marginRight="25sp"
                        android:layout_marginTop="20sp"
                        android:background="@drawable/round_back_edittext"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:src="@drawable/authenticate" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:text="Authenticate"
                            android:textSize="18dp" />


                        <ImageView
                            android:id="@+id/iv_check_authentication"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="0.5"
                            android:src="@drawable/checked"
                            android:visibility="gone" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="25sp"
                        android:layout_marginRight="25sp"
                        android:layout_marginTop="20dp">

                        <Button
                            android:id="@+id/btn_send"
                            android:layout_width="170sp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/round_back_create_button"
                            android:text="Send"
                            android:textColor="#ffffff" />

                    </FrameLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_comments"
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/round_edittext"
                    android:gravity="left"
                    android:hint="Comments"
                    android:inputType="textMultiLine"
                    android:paddingLeft="20sp"
                    android:paddingTop="5sp"
                    android:textAlignment="gravity" />
            </FrameLayout>
        </LinearLayout>
    </TableLayout>

