<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.JobCompletedFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/missionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mission"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:typeface="sans"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/missionDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:text="Show picture of Flow Express Terminals" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_first_image"
                        android:layout_width="110sp"
                        android:layout_height="100sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="20sp"
                        android:src="@drawable/image1" />


                        <ImageView
                            android:id="@+id/iv_second_image"
                            android:layout_width="110sp"
                            android:layout_height="100sp"
                            android:background="#ffffff"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:src="@drawable/camera"
                            android:layout_marginTop="0dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/et_comments"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_marginTop="25sp"
                    android:background="@drawable/round_edittext"
                    android:gravity="left"
                    android:hint="Comments"
                    android:inputType="textMultiLine"
                    android:paddingLeft="20sp"
                    android:paddingTop="5sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="20sp"
                    android:textAlignment="gravity" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/round_edittext">
                    <ImageView
                        android:id="@+id/iv_current_location"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="0sp"
                        android:src="@drawable/location" />

                   <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.3"
                        android:text="Confirm loction"
                       android:layout_marginLeft="10sp"
                        android:textSize="20dp" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_current_check_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/checked" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/round_edittext">

                    <ImageView
                        android:id="@+id/iv_current_time"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="0sp"
                        android:src="@drawable/clock" />
                   <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.3"
                        android:text="Confirm time"
                       android:layout_marginLeft="10sp"
                        android:textSize="20dp" />


                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_current_check_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/checked" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/round_edittext">


                    <ImageView
                        android:id="@+id/iv_authentication"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5sp"
                        android:src="@drawable/authenticate" />
                   <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.3"
                        android:layout_marginLeft="10sp"
                        android:text="Authenticate"
                        android:textSize="20dp" />


                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_check_authentication"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/checked" />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="10dp"
                >


                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="170sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/round_back_create_button"
                    android:text="Send"
                    android:textColor="#ffffff" />

            </FrameLayout>
        </LinearLayout>

</LinearLayout>