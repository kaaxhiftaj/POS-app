<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.VerificationCodeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Please enter the code you\n received via SMS "
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_marginTop="70sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter your  code"
        android:paddingLeft="30dp"
        android:gravity="center"
        android:background="@drawable/round_back_edittext"
        android:id="@+id/verification_code"
        android:inputType="number"
        android:layout_marginTop="50dp"
        android:layout_margin="18sp"/>

    <Button
        android:id="@+id/btn_verify_code"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_back_create_button"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Enter"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />
</LinearLayout>