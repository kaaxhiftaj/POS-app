<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f3f3f3"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="5sp">
        <RelativeLayout
            android:id="@+id/individual_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/accepted_job_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10sp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/accepted_job_title"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/accepted_job_image"
                android:nextFocusRight="@id/accepted_job_image"
                android:text="Title "
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accepted_job_desc"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/accepted_job_title"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:maxLines="5"
                android:text="Description" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>