<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SetNamesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Set First Name and Last name"
            android:textColor="#00A0F1"
            android:gravity="center"
            android:textSize="25dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="First Name"
            android:paddingLeft="30dp"
            android:background="@drawable/round_back_edittext"
            android:id="@+id/set_first_name"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Last Name"
            android:paddingLeft="30dp"
            android:background="@drawable/round_back_edittext"
            android:id="@+id/set_last_name"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="25dp"
            android:id="@+id/go"
            android:textColor="@color/white"
            android:background="@drawable/round_back_create_button"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</FrameLayout>